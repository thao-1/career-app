{
  "manifest_version": 3,
  "name": "CareerHack - Smart Job Application Assistant",
  "version": "1.0.0",
  "description": "Intelligently auto-fill job application forms across LinkedIn, Indeed, Glassdoor, and ZipRecruiter with full user control.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://indeed.com/*",
    "https://www.indeed.com/*",
    "https://glassdoor.com/*",
    "https://www.glassdoor.com/*",
    "https://ziprecruiter.com/*",
    "https://www.ziprecruiter.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://indeed.com/*",
        "https://www.indeed.com/*",
        "https://glassdoor.com/*",
        "https://www.glassdoor.com/*",
        "https://ziprecruiter.com/*",
        "https://www.ziprecruiter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CareerHack Assistant",
    "default_icon": {
      "16": "chromeicon.png",
      "32": "chromeicon.png",
      "48": "chromeicon.png",
      "128": "chromeicon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "chromeicon.png",
    "32": "chromeicon.png",
    "48": "chromeicon.png",
    "128": "chromeicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "preview.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
